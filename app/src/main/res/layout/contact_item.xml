<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="7sp"
    android:layout_marginStart="7sp"
    android:layout_marginTop="7sp"
    android:layout_marginBottom="7sp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contact_item_avatar"
            android:layout_width="150sp"
            android:layout_height="160sp"
            android:scaleType="fitXY"
            android:background="@drawable/avatar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/contact_data_shape"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style = "@style/FatText"
                android:text="TextView" />

            <TextView
                android:id="@+id/contact_item_work_pos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/contact_short_item_description"
        android:background="@drawable/event_description_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />
</LinearLayout>