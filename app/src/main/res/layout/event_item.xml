<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5sp"
    android:layout_marginEnd="5sp"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="5sp"
    android:background="@drawable/button_shape"
    android:elevation="1sp"
    android:translationZ="2sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/event_time_layout"
            android:layout_width="75sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/event_time_lecture_shape"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="5sp"
                android:textSize="20sp"
                android:text="9:20"
                />

            <TextView
                android:id="@+id/event_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="5sp"
                android:textSize="15sp"
                android:text="10:55" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/event_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@drawable/event_info_shape"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13sp"
                android:text="Физика"
                style="@style/FatText"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/event_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13sp"
                android:text="Лекция" />

            <TextView
                android:id="@+id/event_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13sp"
                android:text="Д-303" />

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13sp"
                android:layout_marginBottom="5sp"
                android:text="Корецкая И. В." />
        </LinearLayout>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/event_description_shape">

        <TextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="7sp"
            android:paddingEnd="7sp"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:gravity="center_vertical"
            android:text="См. фото на телефоне" />
    </TableRow>

</LinearLayout>