<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RoundedCornerButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:elevation">10sp</item>
        <item name="android:translationZ">7sp</item>
    </style>

    <style name="BackButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">10sp</item>
        <item name="android:translationZ">4sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">7sp</item>
        <item name="android:layout_marginEnd">7sp</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:paddingEnd">5sp</item>
    </style>

    <style name="FatText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SearchStyle">
        <item name="android:background">@drawable/search_background_shape</item>
        <item name="android:layout_marginStart">7sp</item>
        <item name="android:layout_marginEnd">7sp</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:hint">@string/enter_request</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:paddingEnd">5sp</item>
        <item name="android:paddingTop">2sp</item>
        <item name="android:paddingBottom">2sp</item>
        <item name="android:elevation">2sp</item>
        <item name="android:translationZ">0sp</item>
    </style>

    <style name="SettingStyle">
        <item name="android:paddingTop">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:paddingEnd">5sp</item>
    </style>

    <style name="CreateActivityTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EventText">
        <item name="android:layout_marginStart">10sp</item>
    </style>

    <style name="EventEditTextStyle">
        <item name="android:background">@drawable/edit_event_edit_text_shape</item>
        <item name="android:layout_marginStart">7sp</item>
        <item name="android:layout_marginEnd">7sp</item>
        <item name="android:paddingStart">4sp</item>
        <item name="android:paddingEnd">4sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:paddingBottom">4sp</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:layout_marginBottom">4sp</item>
        <item name="android:hint">...</item>
        <item name="android:elevation">2sp</item>
        <item name="android:translationZ">0sp</item>
    </style>

</resources>